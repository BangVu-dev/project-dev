<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name">         
        </div>
        <div class="form-group">
            <label for="descripttion">Descripttion</label>
            <input type="text" class="form-control" id="descripttion" name="descripttion">         
        </div>
        <div class="form-group">
            <label for="videoID">VideoID</label>
            <input type="text" class="form-control" id="videoID" name="videoID">         
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" id="level" name="level">         
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>
<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">         
        </div>
        <div class="form-group">
            <label for="descripttion">Descripttion</label>
            <textarea class="form-control" id="descripttion" name="descripttion">{{course.descripttion}}</textarea>     
        </div>
        <div class="form-group">
            <label for="videoID">VideoID</label>
            <input type="text" class="form-control" value="{{course.videoID}}" id="videoID" name="videoID">         
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">         
        </div>
        <div class="form-group course-image">
            <label for="image">Image</label>
            <input type="text" class="form-control" value="{{course.image}}" id="image" name="image">         
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>